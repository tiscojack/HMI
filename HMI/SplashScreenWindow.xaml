<Window x:Class="HMI.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="SplashScreenWindow">
    <Window.Background>
        <ImageBrush ImageSource="C:\Progetti\OSN\OAMD\OAMDHMI\HMI\resources\FremmSplash.jpg"/>
    </Window.Background>
    <Grid>
        <ProgressBar x:Name="progressBar" Foreground="#0D1D35" Height="30" Width="1080" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20"/>
        <TextBlock Text="{Binding ElementName=progressBar, Path=Tag, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="27"/>
    </Grid>
</Window>
