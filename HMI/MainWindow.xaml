<Window
    x:Class="Prova.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Prova"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RINA HMI"
    SizeToContent="Manual"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MinWidth="150" MaxWidth="800"/>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel  x:Name="UpStackPanel" Grid.ColumnSpan="3" Grid.Row="0" Orientation="Horizontal" Background="#0D1D35" Height="70">
            <Button  HorizontalAlignment="Right" Background="#1F437A" Height="30" Width="50" FontWeight="Bold" Foreground="#FFFFFF" Content="USER" Padding="5,2"></Button>
            <Image Name="imgLogo" Grid.Column="0" Grid.Row="0" Height="50" HorizontalAlignment="Left"/>
        </StackPanel>

        <DockPanel x:Name="leftDocPanel" Grid.Row="1" Background="#C2D4F0">
            <Menu DockPanel.Dock="Top" Grid.Row="0">
                <MenuItem Header="_File">
                    <MenuItem Header="_Demo" Click="Demo_Click" />
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
            <ScrollViewer>
                <StackPanel>
                    <TextBox x:Name="txtSearch" Background="#C2D4F0" ToolTip="Search Here" VerticalAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" MinWidth="200" TextChanged="TxtSearch_TextChanged" Grid.Column="0" Grid.Row="1"/>
                <TreeView
                    Name="dirTree"
                    Background="#C2D4F0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    MouseUp="Tv_MouseUp"
                    VirtualizingStackPanel.IsVirtualizing="False"
                    VirtualizingStackPanel.VirtualizationMode="Standard">


                    <TreeView.ItemContainerStyle>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <Setter Property="IsExpanded" Value="True" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
            
            </StackPanel>
            </ScrollViewer>
        </DockPanel>
            <GridSplitter
                Grid.Column="1"
                Grid.Row="1"
                Width="5"
                HorizontalAlignment="Stretch" />
        <DockPanel x:Name="rightDocPanel" Grid.Column="2" Grid.Row="1">
            <ScrollViewer>
                <DockPanel
                    x:Name="DocPanel"
                    Grid.Column="2"
                    Background="#F5F5F5"
                    >
                    <WrapPanel
                        x:Name="Wrap"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        ItemWidth="170" />
                </DockPanel>
            </ScrollViewer>
        </DockPanel>

    </Grid>
</Window>
